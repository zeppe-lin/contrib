# Description: Tool to diagnose issues with power consumption and power management
# URL:         https://01.org/powertop/
# Depends on:  libnl ncurses

name=powertop
version=2.13
release=1
source=(https://01.org/sites/default/files/downloads/$name-$version.tar.gz)

build() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--disable-nls \

	make V=1
	make DESTDIR=$PKG install
}
