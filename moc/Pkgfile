# Description: Console audio player
# URL:         http://moc.daper.net/
# Depends on:  curl libid3tag libmad libsndfile popt
# Optional:    ffmpeg

name=moc
version=2.5.2
release=1
source=(http://ftp.daper.net/pub/soft/moc/stable/$name-$version.tar.bz2
	moc_2.5.2_youtubedl.patch
	moc-ffmpeg4.patch
	moc-https.patch)

build() {
	cd $name-$version

	patch -p0 -i $SRC/moc-ffmpeg4.patch
	#patch -p1 -i $SRC/moc_2.5.2_youtubedl.patch # not yet
	patch -p0 -i $SRC/moc-https.patch

	./configure \
		--prefix=/usr \
		--disable-nls \
		--disable-debug

	make V=1
	make DESTDIR=$PKG install

	install -m 0644 -D -t $PKG/usr/share/moc/ \
		config.example keymap.example

	rm -rf $PKG/usr/share/doc
}
