# Description: Cross-platform 3D audio.
# URL: https://github.com/kcat/openal-soft
# Depends on: alsa-lib cmake

name=openal
version=1.21.0
release=1
source=(https://github.com/kcat/openal-soft/archive/openal-soft-$version.tar.gz)

build() {
	[ -e '/usr/bin/ninja' ] && PKGMK_OPENAL+=' -G Ninja'

	cmake -S openal-soft-openal-soft-$version -B build ${PKGMK_OPENAL} \
		-D CMAKE_INSTALL_PREFIX=/usr \
		-D CMAKE_INSTALL_LIBDIR=lib \
		-D ALSOFT_EXAMPLES=OFF \
		-D CMAKE_BUILD_TYPE=Release

	cmake --build build
	DESTDIR=$PKG cmake --install build
}
