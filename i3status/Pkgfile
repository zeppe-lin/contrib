# Description: Generate a status bar for i3 bar
# URL:         https://i3wm.org/i3status
# Depends on:  alsa-lib i3 libconfuse libnl

name=i3status
version=2.13
release=4
source=(http://i3wm.org/$name/$name-$version.tar.bz2
	no_pulseaudio.patch)

build() {
	cd $name-$version

	patch -p1 < $SRC/no_pulseaudio.patch

	autoreconf -vif

	mkdir build
	cd build

	../configure          \
		--prefix=/usr \
		--disable-pulseaudio

	make V=1
	make DESTDIR=$PKG install
}
