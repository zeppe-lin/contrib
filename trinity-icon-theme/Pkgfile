# Description:  Trinity Icon Theme
# URL:          https://github.com/chinarulezzz-de/Trinity-Icon-Theme
# Depends on:   librsvg-compat hicolor-icon-theme

name=trinity-icon-theme
version=0.3-e7f4952
_commit=e7f4952ed78b2216481bc7f4ad27e8f5ab26b695
release=1
source=(https://github.com/chinarulezzz-de/Trinity-Icon-Theme/archive/$_commit/$name-$_commit.tar.gz)

build() {
	cd Trinity-Icon-Theme-$_commit

	install -d $PKG/usr/share/icons/Trinity

	# remove junk
	rm copyright LICENSE README.md scrshot.png
	rm icon-theme.cache # the new one will be generated by post-install script

	cp -r * $PKG/usr/share/icons/Trinity
}
