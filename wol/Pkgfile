# Description:	Program to send WOL (Wake On Lan) packets
# URL:		http://wake-on-lan.sf.net
# Depends on:	

name=wol
version=0.7.1
release=1
source=(http://prdownloads.sf.net/wake-on-lan/$name-$version.tar.gz)

build() {
	cd $name-$version
	./configure \
		--prefix=/usr \
		--mandir=/usr/share/man \
		--disable-nls
	make
	make DESTDIR=$PKG install
	rm -rf $PKG/usr/info
}
