# Description:  Extra color themes for Trinity
# URL:          https://github.com/chinarulezzz-de/Trinity-Extra-Theme

name=trinity-extra-theme
version=0.2
release=1
source=(https://github.com/chinarulezzz-de/Trinity-Extra-Theme/archive/v$version/$name-$version.tar.gz)

build() {
	cd Trinity-Extra-Theme-$version

	install -m 644 -D -t $PKG/usr/share/vim/colors Trinity.vim
	install -m 644 -D -t $PKG/usr/share/trinity    hexchat
	install -m 644 -D -t $PKG/usr/share/trinity    Xresources
}
