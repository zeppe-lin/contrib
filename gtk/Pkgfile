# Description: Multi-platform toolkit for creating graphical user interfaces
# URL:         https://www.gtk.org
# Depends on:  atk bzip2 cairo e2fsprogs expat fontconfig freetype fribidi gdk-pixbuf glib harfbuzz libffi libjpeg-turbo libpcre libpng libtiff pango xorg-libpixman xorg-libx11 xorg-libxau xorg-libxcb xorg-libxcomposite xorg-libxcursor xorg-libxdamage xorg-libxdmcp xorg-libxext xorg-libxfixes xorg-libxinerama xorg-libxrandr xorg-libxrender xz zlib zstd hicolor-icon-theme

name=gtk
version=2.24.33
release=1
source=(https://download.gnome.org/sources/gtk+/2.24/${name}+-$version.tar.xz
	gtk.immodules gtk-register.sh)

build() {
	cd gtk+-$version

	./configure --prefix=/usr

	make V=1
	make DESTDIR=$PKG install

	install -m 0644 -D $SRC/gtk.immodules \
		$PKG/usr/lib/gtk-2.0/2.10.0/immodules.cache

	install -m 0755 -D $SRC/gtk-register.sh \
		$PKG/usr/bin/gtk-register

	rm -r \
		$PKG/usr/share/{gtk-doc,gtk-2.0} \
		$PKG/usr/bin/{gtk-demo,gtk-update-icon-cache}
}
