# Description: GStreamer Base Plugins
# URL:         https://gstreamer.freedesktop.org/modules/gst-plugins-base.html
# Depends on:  alsa-lib graphene gstreamer libgudev libjpeg-turbo libtheora libvisual mesa opus orc pango
# Optional:    cdparanoia

name=gst-plugins-base
version=1.18.3
release=1
source=(https://gstreamer.freedesktop.org/src/$name/$name-$version.tar.xz)

build() {
	meson setup build $name-$version \
		--prefix=/usr            \
		--libexecdir=/usr/lib    \
		--wrap-mode=nodownload   \
		-D buildtype=plain       \
		-D examples=disabled     \
		-D gtk_doc=disabled      \
		-D nls=disabled          \

	meson compile -C build -j ${JOBS:-1} -v
	DESTDIR=$PKG meson install -C build
}
