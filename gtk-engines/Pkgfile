# Description: Standard theme engines for GTK+2
# URL:         https://wiki.gnome.org/action/show/Design?action=show&redirect=GnomeArt
# Depends on:  gtk

name=gtk-engines
version=2.20.2
release=2
source=(http://ftp.gnome.org/pub/GNOME/sources/$name/2.20/$name-$version.tar.bz2)

build() {
	cd $name-$version

	sed -i 's|<glib/.*\.h>|<glib.h>|' \
		engines/clearlooks/src/animation.c

	./configure \
		--prefix=/usr      \
		--enable-animation \

	make V=1
	make DESTDIR=$PKG install

	rm -r $PKG/usr/share/{locale,gtk-engines}
}
