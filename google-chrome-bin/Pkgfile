# Description: Web browser by Google (Stable)
# URL:         https://www.google.com/chrome
# Depends on:  alsa-lib gtk3 xorg-libxtst nss cups

name=google-chrome-bin
version=73.0.3683.86
release=1
source=(https://dl.google.com/linux/chrome/deb/pool/main/g/google-chrome-stable/google-chrome-stable_$version-1_amd64.deb)

build() {
	bsdtar -xf google-chrome-stable_$version-1_amd64.deb
	bsdtar -xf data.tar.xz -C $PKG

	for i in 16x16 22x22 24x24 32x32 48x48 64x64 128x128 256x256; do
		install -Dm644 $PKG/opt/google/chrome/product_logo_${i/x*}.png \
		$PKG/usr/share/icons/hicolor/$i/apps/google-chrome.png
	done

	# Fix chrome icon resolution
	sed -i "/Exec=/i\StartupWMClass=Google-chrome" \
		$PKG/usr/share/applications/google-chrome.desktop

	# Remove debian cron jobs and duplicate product logos
	rm -r $PKG/etc/cron.daily/ $PKG/opt/google/chrome/cron/
	rm $PKG/opt/google/chrome/product_logo_*.png
}
