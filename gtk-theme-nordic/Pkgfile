# Description:  Dark Gtk3.20+ theme created using the awesome Nord color pallete
# URL:          https://github.com/EliverLara/Nordic
# Depends on:   gtk3 gtk-theme-adwaita gtk-engine-murrine

name=gtk-theme-nordic
version=1.9.0
release=1
source=(https://github.com/EliverLara/Nordic/archive/v$version/Nordic-$version.tar.gz)

build() {
	cd Nordic-$version

	rm -r {Art,src}
	rm {*.js,*json,*md,LICENSE}

	find $SRC -type f -name "*.scss" -exec rm -f {} \;
	find $SRC -type d -empty -delete

	mkdir -p $PKG/usr/share/themes/Nordic
	cp -r *  $PKG/usr/share/themes/Nordic
}
