# Description: Trinity GTK theme (chinarulezzz fork)
# URL:         https://github.com/chinarulezzz-de/Trinity-GTK-Theme
# Depends on:  gtk-engines gtk-engine-murrine

name=trinity-gtk-theme
version=1.3
release=1
source=(https://github.com/chinarulezzz-de/Trinity-GTK-Theme/archive/v${version}/$name-v${version}.tar.gz)

build() {
	cd Trinity-GTK-Theme-$version

	install -d $PKG/usr/share/themes/Trinity
	cp -r gtk-2.0 $PKG/usr/share/themes/Trinity
	cp -r gtk-3.0 $PKG/usr/share/themes/Trinity
}
