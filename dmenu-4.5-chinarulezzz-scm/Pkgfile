# Description: Dynamic menu for X
# URL:         https://github.com/chinarulezzz-de/dmenu-4.5-chinarulezzz
# Depends on:  git xorg-libxft xorg-libxinerama

name=dmenu-4.5-chinarulezzz-scm
version=$(date +%Y%m%d)
release=1
source=(git+https://github.com/chinarulezzz-de/${name/-scm}@master)

build() {
	cd ${name/-scm}@master

	make PREFIX=/usr DESTDIR=$PKG install
}
