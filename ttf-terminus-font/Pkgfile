# Description: Terminus ttf fonts
# URL:         https://files.ax86.net/terminus-ttf/
# Depends on:  fontconfig

name=ttf-terminus-font
version=4.47.0
release=1
source=(https://files.ax86.net/terminus-ttf/files/$version/terminus-ttf-$version.zip)

build() {
	cd terminus-ttf-$version

	for font in \
		"TerminusTTF-$version.ttf"             \
		"TerminusTTF-Bold-$version.ttf"        \
		"TerminusTTF-Italic-$version.ttf"      \
		"TerminusTTF-Bold Italic-$version.ttf" ;
	do
		install -Dm644 "$font" \
			$PKG/usr/share/fonts/X11/TTF/Terminus/"$font"
	done
}
