# Description: Change of themes, icons, and fonts used by applications
# URL:         https://wiki.lxde.org/en/LXAppearance
# Depends on:  gtk

name=lxappearance
version=0.6.3
release=1
source=(http://downloads.sourceforge.net/sourceforge/lxde/$name-$version.tar.xz)

build() {
	cd $name-$version

	export LINGUAS=" "

	./configure \
		--prefix=/usr     \
		--sysconfdir=/etc \
		--disable-nls     \

	make V=1
	make DESTDIR=$PKG install
}
