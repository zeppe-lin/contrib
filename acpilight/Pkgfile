# Description: Backward-compatible xbacklight replacement based on ACPI
# URL:         https://gitlab.com/wavexx/acpilight
# Depends on:  eudev python3

name=acpilight
version=1.2
release=1
source=(https://gitlab.com/wavexx/$name/-/archive/v$version/$name-v$version.tar.bz2)

build() {
	cd $name-v$version

	install -m 755 -D xbacklight         $PKG/usr/bin/xbacklight
	install -m 644 -D xbacklight.1       $PKG/usr/share/man/man1/xbacklight.1
	install -m 644 -D 90-backlight.rules $PKG/lib/udev/rules.d/90-backlight.rules
}
