#!/bin/sh
#
# /etc/rc.d/tor: start/stop tor daemon
#

case $1 in
	start)
		su tor -c /usr/bin/tor
		;;
	stop)
		killall -q /usr/bin/tor
		;;
	restart)
		$0 stop
		$0 start
		;;
	reload)
		kill -HUP "$(< /var/run/tor.pid)"
		;;
	chkconf)
		su tor -c '/usr/bin/tor --verify-config'
		;;
	*)
		echo "usage: $0 [start|stop|restart|reload|chkconf]"
	;;
esac

# End of file
