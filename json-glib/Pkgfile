# Description: Serialization and deserialization of JSON objects
# URL:         https://wiki.gnome.org/action/show/Projects/JsonGlib
# Depends on:  glib meson ninja gobject-introspection

name=json-glib
version=1.6.2
release=1
source=(https://download.gnome.org/sources/$name/${version%.*}/$name-$version.tar.xz)

build() {
	sed "/^subdir('po')/d" -i $name-$version/meson.build

	meson setup build $name-$version \
		--prefix=/usr        \
		--buildtype=plain    \
		-D gtk_doc=disabled  \
		-D tests=false       \

	meson compile -C build -j ${JOBS:-1} -v
	DESTDIR=$PKG meson install -C build
}
