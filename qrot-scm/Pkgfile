# Description: OSINT helper tool
# URL:         https://github.com/volgk/qrot
# Depends on:  git

name=qrot-scm
version=$(date +%Y%m%d)
release=1
source=(git+https://github.com/volgk/${name/-scm}@master)

build() {
	cd ${name/-scm}@master

	install -Dm 0644 engines.json -t $PKG/usr/share/qrot
	install -Dm 0644 search.py    -t $PKG/usr/share/qrot
	install -Dm 0755 qrot.py         $PKG/usr/bin/qrot
}
