# Description: Trinity Cursor Theme
# URL:         https://github.com/chinarulezzz-de/Trinity-Cursor-Theme

name=trinity-cursor-theme
version=0.1
release=1
source=(https://github.com/chinarulezzz-de/Trinity-Cursor-Theme/archive/v$version/$name-$version.tar.gz)

build() {
	cd Trinity-Cursor-Theme-$version

	install -d $PKG/usr/share/icons/Trinity-Cursor-Theme
	cp -r * $PKG/usr/share/icons/Trinity-Cursor-Theme
}
