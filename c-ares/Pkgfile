# Description: Asynchronous C DNS library
# URL:         https://c-ares.haxx.se

name=c-ares
version=1.17.1
release=1
source=(https://c-ares.haxx.se/download/$name-$version.tar.gz)

build() {
	cd $name-$version

	# FIXME: remove default -g0 flag
	./configure --prefix=/usr

	make
	make DESTDIR=$PKG install
}
